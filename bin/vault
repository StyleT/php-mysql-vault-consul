#!/bin/bash
set -e

tty="-i"

while getopts "i" opt; do
  case $opt in
    i)
      tty="-it"
      shift
      ;;
    \?)
      echo "Invalid option: -$OPTARG" >&2
      exit 1
      ;;
  esac
done

if [ "$1" == "--" ]; then shift; fi

if [ "$1" == "unseal" ] || [ "$1" == "auth" ]; then
  tty="-it"
fi

VAULT="docker exec $tty vault_vault_1 vault"

echo "> $VAULT $@" >&2
eval "$VAULT $@"

